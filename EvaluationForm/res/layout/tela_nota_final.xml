<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/nota_final_exibe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="TextView"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/nota_final_aluno2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/nota_final_exibe"
        android:layout_marginRight="64dp"
        android:layout_marginTop="76dp"
        android:text="Aluno 2"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/nota2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nota_final_aluno1"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="23dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/nota1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nota2"
        android:layout_alignBottom="@+id/nota2"
        android:layout_alignLeft="@+id/nota_final_aluno2"
        android:text="TextView" />

    <TextView
        android:id="@+id/nota_final_aluno1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/nota_final_aluno2"
        android:layout_alignBottom="@+id/nota_final_aluno2"
        android:layout_alignLeft="@+id/nota2"
        android:text="Aluno 1"
        android:textSize="15sp" />

</RelativeLayout>